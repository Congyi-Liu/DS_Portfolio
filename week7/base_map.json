{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://vega.github.io/vega-datasets/data/us-10m.json",
    "format": {
      "type": "topojson",
      "feature": "states"
    }
  },
  "projection": {
    "type": "albersUsa"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "black",
    "fill": "#00a651"  // Green color for the map
  },
  "encoding": {
    "tooltip": {
      "field": "properties.name",
      "type": "nominal",
      "title": "State Name"
    }
  }
}
